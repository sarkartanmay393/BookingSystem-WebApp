                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Enter Room Name" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Contact Links Implementation -->

    <h2 class="mt-2 text-center">Reservation Summary</h2>
    <hr>
    {{$res := index .Data "reservation"}}
    <div class="container reservation-summary-component">
        <table class="table table-striped">
            <thead></thead>
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>{{$res.FirstName}} {{$res.LastName}}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{$res.Email}}</td>
                </tr>
                <tr>
                    <td>Arrival:</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Departure:</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>{{$res.Phone}}</td>
                </tr>
            </tbody>
        </table>
    </div>


{{end}}