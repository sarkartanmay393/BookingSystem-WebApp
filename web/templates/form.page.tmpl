{{template "base" .}}

{{define "content"}}

    <h2> This is contact form page. </h2>
    <div class="container">
        <div class="col">
            <form method="POST" action="/form">
                <label>Name</label><input name="name" type="text" value="" />
                <label>Address</label><input name="address" type="text" value="" />
                <input type="submit" value="submit" />
            </form>
            <div>
                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        This is the IP address: {{index .StringMap "remote_ip"}}
                    {{else}}
                        IP address is not yet parsed, visit <a href="/">Home Page</a> first to do so.
                    {{end}}
                </p>
            </div>
        </div>
    </div>

{{end}}
