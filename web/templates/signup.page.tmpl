{{template "base" .}}

{{define "content"}}

    <!-- Navigation bar implementation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="http://localhost/">YatraSahayak</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://localhost/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/reservation">Reservations</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Rooms
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="http://localhost/singlebed">Single Room</a></li>
                            <li><a class="dropdown-item" href="http://localhost/coed">Co-ed Room</a></li>
                            <!--              <li><hr class="dropdown-divider"></li>-->
                            <li><a class="dropdown-item" href="http://localhost/highland">Highland Room</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/contact">Contact</a>
                    </li>
                    {{if .IsLogin}}
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost/logout" methods="post">Logout</a>
                        </li>
                    {{else}}
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost/login">Login</a>
                        </li>
                    {{end}}
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Enter Room Name" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Login, Dialog with Button to Reservation -->
    <div class="text-center welcome-component">
        <h1 class="welcome-text" style="color: white">
            Signup in YatraSahayak
        </h1>
        <p class="welcome-paragraph" style="color: white">
            <a href="/login"> Already have account ? </a>
        </p>

        <div class="row">
            <div class="col g-2">

                <form action="/signup" method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                    <div class="input-group flex-nowrap mb-3">
                        <span class="input-group-text" id="addon-wrapping">First</span>
                        <input id="first_name" name="first_name" type="text" class="form-control" placeholder="Name" aria-label="First Name" aria-describedby="addon-wrapping">
                    </div>

                    <div class="input-group flex-nowrap mb-3">
                        <span class="input-group-text" id="addon-wrapping">Last</span>
                        <input  id="last_name" name="last_name" type="text" class="form-control" placeholder="Name" aria-label="Last Name" aria-describedby="addon-wrapping">
                    </div>

                    <div class="input-group flex-nowrap mb-3">
                        <span class="input-group-text" id="addon-wrapping">Email</span>
                        <input id="email" name="email" type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="addon-wrapping">Password</span>
                        <input id="password" name="password" type="text" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="button-addon2">
                        <button type="submit" class="btn btn-success" id="login-button" name="login-button">Signup</button>
                    </div>

                </form>

            </div>
        </div>

    </div>


{{end}}